@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/CoverPage.css" asp-append-version="true">
    <style>
        .header {
            padding-bottom: 0;
            min-height: 5rem;
            flex-direction: row;
            justify-content: space-between;
            position: relative;
            padding-top: 0;
        }
    </style>
</head>

<body>
    <!-- Header  -->
    <header id="header">
        <div class="header container">
            <nav class="nav-list">
                <ul class="nav-links">
                    <li><a href="#" class="nav-link">Home</a></li>
                    <li><a href="#features" class="nav-link">Features</a></li>
                    <li><a href="#footer" class="nav-link">Contact</a></li>
                </ul>
                <ul class="nav-links extra">
                    <li>
                        <a asp-area="Account" asp-controller="Login" asp-action="Login" class="nav-link">
                            <button class="cta">
                                <span>Get Started</span>
                                <svg width="15px" height="10px" viewBox="0 0 13 10">
                                    <path d="M1,5 L11,5"></path>
                                    <polyline points="8 1 12 5 8 9"></polyline>
                                </svg>
                            </button>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- End Header  -->

    <!-- background -->
    <section id="background">
        <div class="background container">
            <article class="article">
            </article>
        </div>
    </section>
    <!-- End background -->

    <!-- features -->
    <section id="features">
        <div class="features container">

            <div class="intro">
                <h1 class="primary-title feature">Introduce about features</h1>
            </div>

            <div class="collection">
                <article class="article">
                    <div class="feature-img">
                        <img src="~/lib/image/dashboard.png" class="image">
                    </div>
                    <div class="feature-details">
                        <h2 class="secondary-title">Dashboard</h2>
                        <p>Easily navigate through all the functionalities of the application with our intuitive
                            dashboard.
                            Quickly access key features and manage your settings with a user-friendly interface designed
                            to enhance your experience.</p>
                    </div>
                </article>

                <article class="article">
                    <div class="feature-img">
                        <img src="~/lib/image/showandsearchproduct.png" class="image" alt="">
                    </div>
                    <div class="feature-details">
                        <h2 class="secondary-title">Cart</h2>
                        <p>Save your favorite items for later or proceed directly to purchase with our seamless cart
                            feature. Whether you’re browsing or ready to buy, the cart makes shopping smooth and
                            efficient, keeping your selections just a click away.</p>
                    </div>
                </article>
                <article class="article">
                    <div class="feature-img">
                        <img src="~/lib/image/Cart.png" class="image" alt="">
                    </div>
                    <div class="feature-details">
                        <h2 class="secondary-title">Product Viewing and Search</h2>
                        <p>"xplore a wide range of products with our comprehensive viewing and search capabilities.
                            Find exactly what you need in seconds with advanced filtering options and detailed product
                            descriptions, ensuring you make the best choices.</p>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <!-- End features -->


