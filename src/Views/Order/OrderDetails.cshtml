@model src.Models.Order.OrderViewModel

<h1>Order Detail</h1>

<div>
    <h3>Order Information</h3>
    <p>Order ID: @Model.OrderId</p>
    <p>Customer Name: @Model.CustomerName</p>
    <p>Address: @Model.Address, @Model.City, @Model.Country</p>
    <p>Total Price: @Model.TotalPrice</p>
    <p>Status: @Model.Status</p>
    <p>Order Date: @Model.OrderDate</p>
</div>

<div>
    <h3>Order Details</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.ProductName</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.Price</td>
                    <td>@detail.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Index" asp-controller="Order">Back to Orders</a>