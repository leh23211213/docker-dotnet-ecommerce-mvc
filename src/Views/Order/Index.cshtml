@model List<src.Models.Order.OrderViewModel>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Country</th>    
            <th>Status</th>
            <th>Order Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)

        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.Address</td>
                <td>@order.City</td>
                <td>@order.Country</td>
                <td>@order.Status</td>
                <td>@order.OrderDate</td>
                <td>
                    <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.OrderId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
