@model src.Areas.Account.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="account-pages my-5 pt-sm-5">
    <div class="justify-content-center row">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="overflow-hidden card">
                <div class="bg-primary-subtle">
                    <div class="row">
                        <div class="col col-7">
                            <div class="text-primary p-4">
                                <h4>Welcome &#128079;</h4>
                                <p>
                                    Create a new account.
                                </p>
                            </div>
                        </div>
                        <div class="col col-5 align-self-end">
                            <img src="~/lib/image/Login/profile-img.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
                <div class="pt-0 card-body">
                    <div class="auth-logo">
                        <div class="avatar-md profile-user-wid mb-4">
                            <span class="avatar-title rounded-circle bg-light">
                                <img src="~/lib/image/Login/Cshapr-icon-purple-logo.png" alt="CSharp Logo"
                                    class="rounded-circle" height="55">
                            </span>
                        </div>
                    </div>
                    <div class="p-2">
                        <form id="registerForm" asp-area="Account" asp-controller="Register" asp-action="Register"
                            method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"
                                    placeholder="name@example.com" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" autocomplete="new-password"
                                    aria-required="true" placeholder="password" />
                                <label asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password"
                                    aria-required="true" placeholder="password" />
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button id="registerSubmit" type="submit"
                                class="w-100 btn btn-lg btn-primary">Register</button>
                        </form>
                        <div class="mt-4 text-center">
                            <div class="socials-row">
                                <p>
                                <section>
                                        @{
                                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                            {
                                            <p>No external login providers available.</p>
                                            }
                                            else
                                            {
                                            <form id="external-account" asp-area="Account" asp-controller="ExternalLogin"
                                                asp-action="LoginWithProvider" method="post" class="form-horizontal">
                                                <div>
                                                    <p>
                                                            @foreach (var provider in Model.ExternalLogins!)
                                                            {
                                                                if (provider.Name == "Google")
                                                                {
                                                                <button type="submit" class="btn btn-primary" name="provider"
                                                                    value="@provider.Name"
                                                                    title="Log in using your @provider.DisplayName account">
                                                                    <img src="~/lib/image/Login/@provider.Name.ToLower()_logo.png"
                                                                        style="height: 30px; width: 30px; "
                                                                        alt="@provider.DisplayName" />
                                                                    Register with @provider.DisplayName
                                                                </button>
                                                                }
                                                            }
                                                    </p>
                                                </div>
                                            </form>
                                            }
                                        }
                                </section>
                                </p>
                                <p>
                                    <a asp-area="Account" asp-controller="Login" asp-action="Login">Already have
                                        account</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
